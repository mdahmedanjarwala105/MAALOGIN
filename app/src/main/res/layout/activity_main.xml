<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    tools:context=".activity.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/orange"
        android:theme="@style/MAA"/>

    <TextView
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:id="@+id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:background="@color/white"
        android:layout_margin="20dp"
        android:padding="7dp"
        android:textColor="@color/brown"
        android:autofillHints="Hello"
        android:drawablePadding="5dp"/>

    <TextView
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:id="@+id/txt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_name"
        android:background="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="7dp"
        android:textColor="@color/brown"
        android:autofillHints="something@gmail.com"
        android:drawablePadding="5dp"/>

    <TextView
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:id="@+id/txt_mobile_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_email"
        android:background="@color/white"
        android:layout_margin="20dp"
        android:padding="7dp"
        android:textColor="@color/brown"
        android:autofillHints="1234567890"
        android:drawablePadding="5dp"/>

    <TextView
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:id="@+id/txt_password1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_mobile_number"
        android:background="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="7dp"
        android:textColor="@color/brown"
        android:autofillHints="password"
        android:drawablePadding="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnLogOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/log_out"
            android:textColor="@color/orange"
            android:textSize="20sp"
            android:background="@color/brown"
            android:paddingHorizontal="90dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete_account"
            android:textColor="@color/orange"
            android:paddingHorizontal="56dp"
            android:textSize="18sp"
            android:background="@color/brown" />

    </LinearLayout>

</RelativeLayout>